import React, { useState } from 'react';
import { TrendingUp, TrendingDown, Info, Clock, Building2, Globe, ChevronDown, ChevronUp } from 'lucide-react';
import { getExchange, isMarketOpen } from '../data/africanExchanges';

const MarketCard = ({ market, onShowDetails }) => {
  const { id, name, country, value, change, positive, volume, source } = market;
  const [expanded, setExpanded] = useState(false);

  // Récupérer les infos enrichies de la bourse
  const exchangeInfo = getExchange(id);
  const marketOpen = exchangeInfo ? isMarketOpen(id) : null;

  return (
    <div className="bg-white rounded-lg shadow-md hover:shadow-lg transition-all duration-200 overflow-hidden">
      {/* Header avec gradient */}
      {exchangeInfo && (
        <div className={`h-1 bg-gradient-to-r ${exchangeInfo.gradient}`} />
      )}

      <div className="p-5">
        {/* Ligne principale */}
        <div className="flex justify-between items-start mb-3">
          <div className="flex items-start gap-2">
            {exchangeInfo && (
              <span className="text-2xl" title={exchangeInfo.country}>
                {exchangeInfo.flag}
              </span>
            )}
            <div>
              <h3 className="font-bold text-lg text-gray-800">{name}</h3>
              <p className="text-sm text-gray-500">{country}</p>
            </div>
          </div>
          <div className="flex items-center gap-2">
            {/* Indicateur marché ouvert/fermé */}
            {marketOpen !== null && (
              <span
                className={`px-2 py-0.5 rounded-full text-xs font-medium ${
                  marketOpen
                    ? 'bg-green-100 text-green-700'
                    : 'bg-gray-100 text-gray-500'
                }`}
              >
                {marketOpen ? 'Ouvert' : 'Fermé'}
              </span>
            )}
            {positive ? (
              <TrendingUp className="text-green-500 w-6 h-6" />
            ) : (
              <TrendingDown className="text-red-500 w-6 h-6" />
            )}
          </div>
        </div>

        {/* Valeur et variation */}
        <div className="mt-3">
          <p className="text-2xl font-bold text-gray-900">{value}</p>
          <div className="flex items-center gap-3 mt-1">
            <span
              className={`text-sm font-semibold px-2 py-0.5 rounded ${
                positive
                  ? 'bg-green-100 text-green-700'
                  : 'bg-red-100 text-red-700'
              }`}
            >
              {change}
            </span>
            {volume && volume !== 'N/A' && (
              <span className="text-xs text-gray-500">Vol: {volume}</span>
            )}
          </div>
        </div>

        {/* Infos complémentaires (expandable) */}
        {exchangeInfo && (
          <>
            <button
              onClick={() => setExpanded(!expanded)}
              className="mt-3 flex items-center gap-1 text-xs text-blue-600 hover:text-blue-800 transition"
            >
              <Info className="w-3 h-3" />
              {expanded ? 'Moins de détails' : 'Plus de détails'}
              {expanded ? (
                <ChevronUp className="w-3 h-3" />
              ) : (
                <ChevronDown className="w-3 h-3" />
              )}
            </button>

            {expanded && (
              <div className="mt-3 pt-3 border-t border-gray-100 space-y-2 text-xs text-gray-600">
                {/* Horaires */}
                <div className="flex items-center gap-2">
                  <Clock className="w-3 h-3 text-gray-400" />
                  <span>
                    {exchangeInfo.tradingHours.open} - {exchangeInfo.tradingHours.close}{' '}
                    ({exchangeInfo.tradingHours.timezone})
                  </span>
                </div>

                {/* Capitalisation */}
                <div className="flex items-center gap-2">
                  <Building2 className="w-3 h-3 text-gray-400" />
                  <span>
                    Cap: {exchangeInfo.marketCap.usdDisplay} | {exchangeInfo.listedCompanies} sociétés
                  </span>
                </div>

                {/* Mécanisme */}
                <div className="flex items-center gap-2">
                  <Globe className="w-3 h-3 text-gray-400" />
                  <span>
                    {exchangeInfo.mechanism} | {exchangeInfo.settlement} | {exchangeInfo.currency.code}
                  </span>
                </div>

                {/* Indice principal */}
                <div className="mt-2 pt-2 border-t border-gray-50">
                  <span className="text-gray-500">Indice: </span>
                  <span className="font-medium text-gray-700">
                    {exchangeInfo.primaryIndex.name} ({exchangeInfo.primaryIndex.code})
                  </span>
                </div>

                {/* Top secteurs */}
                <div className="flex flex-wrap gap-1 mt-2">
                  {exchangeInfo.topSectors.slice(0, 4).map((sector, i) => (
                    <span
                      key={i}
                      className="px-2 py-0.5 bg-gray-100 text-gray-600 rounded-full text-xs"
                    >
                      {sector}
                    </span>
                  ))}
                </div>

                {/* BRVM: Pays membres */}
                {exchangeInfo.memberCountries && (
                  <div className="mt-2 pt-2 border-t border-gray-50">
                    <span className="text-gray-500">Pays membres: </span>
                    <div className="flex flex-wrap gap-1 mt-1">
                      {exchangeInfo.memberCountries.map((c, i) => (
                        <span key={i} title={c.name} className="text-sm">
                          {c.flag}
                        </span>
                      ))}
                    </div>
                  </div>
                )}

                {/* Lien vers la bourse */}
                <div className="mt-2 pt-2 border-t border-gray-50">
                  <a
                    href={exchangeInfo.website}
                    target="_blank"
                    rel="noopener noreferrer"
                    className="text-blue-600 hover:underline"
                  >
                    {exchangeInfo.website.replace('https://', '').replace('www.', '').split('/')[0]}
                  </a>
                </div>
              </div>
            )}
          </>
        )}

        {/* Source et timestamp */}
        <div className="mt-3 pt-2 border-t border-gray-100 flex justify-between items-center">
          <span className="text-xs text-gray-400">
            Source: {source}
          </span>
          {exchangeInfo && (
            <span className="text-xs text-gray-400">
              #{exchangeInfo.rankAfrica} Afrique
            </span>
          )}
        </div>
      </div>
    </div>
  );
};

export default MarketCard;
